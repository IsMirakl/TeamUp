{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^@nestjs/(common|core|platform.*)$",
    "^@nestjs/(.*)$",
    "^@prisma/client$",
    "^[./]",
    "^[a-zA-Z]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.prisma",
      "options": {
        "parser": "prisma"
      }
    },
    {
      "files": ["*.controller.ts", "*.service.ts", "*.module.ts"],
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "*.dto.ts",
      "options": {
        "semi": false
      }
    }
  ]
}
